<%- include('./layouts/header.ejs') %>
    <%- include('./layouts/sideBar.ejs') %>
        <%- include('./layouts/navBar.ejs') %>

            <div class="main-panel">
                <div class="content-wrapper">

                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h2 class="card-title" style="text-align: center;">ORDERS</h2>
                                <div class="table-responsive">

                                    <table id="search-table" class="table table-dark">


                                        <thead>
                                            <tr>
                                                <th>Order ID</th>
                                                <th>Username</th>
                                                <th>Address</th>
                                                <th>Order Date</th>
                                                <th>Payment Method</th>
                                                <th>Total Amount</th>
                                                <th> Manage </th>
                                            </tr>
                                        </thead>
                                        <% for(let i=0;i<orders.length;i++){%>
                                            <tr>
                                                <td>
                                                    <%= orders[i]._id %>
                                                </td>
                                                <td>
                                                    <%= orders[i].user.firstName %>
                                                        <br>
                                                        <%= orders[i].user.lastName %>
                                                </td>
                                                <td>
                                                    <%= orders[i].deliveryAddress.fullName %>
                                                        <br>
                                                        <%= orders[i].deliveryAddress.state %>,
                                                            <%= orders[i].deliveryAddress.city %>
                                                                <br>
                                                                <%= orders[i].deliveryAddress.mobile %>
                                                </td>
                                                <td>
                                                    <%= orders[i].orderDate.toLocaleDateString() %>
                                                </td>
                                                <td>
                                                    <%= orders[i].paymentOption %>
                                                </td>
                                                <td>
                                                    â‚¹ <%= orders[i].totalAmount %>
                                                </td>

                                                <td>
                                                    <a href="/admin/manageOrder/<%= orders[i]._id%>">
                                                        <button type="button"
                                                            class="btn btn-outline-secondary btn-icon-text">
                                                            Edit <i class="mdi mdi-file-check btn-icon-append"></i>
                                                        </button>
                                                    </a>
                                                </td>

                                            </tr>
                                            <% }; %>


                                    </table>
                                </div>

                                <div class="pagination mt-3" style="display: flex; justify-content: center;">
                                    <% for (let i=1; i <=totalPages; i++) { %>
                                        <a href="?page=<%= i %>">
                                            <button type="button" class="btn btn-inverse-primary btn-rounded btn-icon">
                                                <%= i %>
                                            </button>
                                        </a>
                                        <% } %>
                                </div>

                            </div>
                        </div>
                    </div>


                </div>
            </div>

            <script src="/car/adminAssets/assets/js/clientSideSearch.js"></script>
            <%- include('./layouts/footer.ejs') %>